<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ConsulterFormation">
    <children>
        <!-- Sidebar -->
        <VBox fx:id="sidebar" prefHeight="400.0" prefWidth="163.0" style="-fx-background-color: #C4C4C4;">
            <children>
                <!-- Space for Logo -->
                <AnchorPane prefHeight="56.0" prefWidth="250.0">
                    <children>
                        <!-- Replace with your logo ImageView -->
                        <Button text="Logo Placeholder" />
                    </children>
                </AnchorPane>

                <!-- Search Bar -->
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="163.0" style="-fx-background-color: #C4C4C4;">
                    <children>
                        <TextField fx:id="searchField" prefHeight="25.0" prefWidth="125.0" promptText="Recherche..." style="-fx-background-color: white; -fx-text-fill: black; -fx-prompt-text-fill: gray;" />
                        <Button onAction="#handleSearch" style="-fx-background-color: #C4C4C4; -fx-text-fill: black; -fx-font-size: 14px;" text="Rechercher" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>

        <!-- Main Content -->
        <AnchorPane fx:id="mainContent" prefHeight="400.0" prefWidth="437.0" style="-fx-background-color: #f0f0f0;">
            <children>
                <VBox alignment="CENTER" layoutY="11.2" prefHeight="378.0" prefWidth="438.0" spacing="10" AnchorPane.bottomAnchor="11.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="11.0">
                    <!-- Replace with your dynamic content VBox for formations -->
                    <VBox fx:id="formationsVBox" spacing="20.0" padding="10.0">
                        <!-- Dynamic content will be added here -->
                    </VBox>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</HBox>
