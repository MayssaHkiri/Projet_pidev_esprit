<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ConsulterFormation">
    <children>
        <!-- Sidebar -->
        <VBox fx:id="sidebar" prefHeight="400.0" prefWidth="163.0" style="-fx-background-color: #C4C4C4;">
            <children>
                <!-- Space for Logo -->
                <AnchorPane prefHeight="56.0" prefWidth="250.0">
                    <children>
                        <ImageView fx:id="logo" fitHeight="56.0" fitWidth="250.0" layoutX="6.0" layoutY="28.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Logo_ESPRIT_Ariana-removebg-preview.png" />
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>

                <!-- Search Bar -->
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="163.0" style="-fx-background-color: #C4C4C4;">
                    <children>
                        <TextField fx:id="searchField" prefHeight="25.0" prefWidth="125.0" promptText="Recherche..." style="-fx-background-color: white; -fx-text-fill: black; -fx-prompt-text-fill: gray;">
                        </TextField>
                        <Button onAction="#handleSearch" style="-fx-background-color: #C4C4C4; -fx-text-fill: black; -fx-font-size: 14px;" text="Rech">
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>

        <!-- Main Content -->
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f0f0f0;">
            <children>
                <AnchorPane fx:id="mainContent" prefHeight="400.0" prefWidth="437.0">
                    <children>
                        <VBox fx:id="formationsVBox" alignment="CENTER" layoutY="11.2" prefHeight="378.0" prefWidth="438.0" spacing="20.0" AnchorPane.bottomAnchor="11.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="11.0">
                            <!-- Dynamic content will be added here -->
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </children>
                </AnchorPane>

                <!-- Pagination -->
                <HBox alignment="CENTER">
                    <Pagination fx:id="pagination" prefHeight="300.0" prefWidth="570.0" />
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
