<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="Controllers.ConsulterFormation">
    <children>
        <BorderPane>
            <top>
                <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
                    <Button onAction="#handleAccueil" text="Accueil" />
                    <MenuButton fx:id="niveauxMenuButton" text="Niveaux">
                        <items>
                            <MenuItem onAction="#handleNiveau1" text="Niveau 1" />
                            <MenuItem onAction="#handleNiveau2" text="Niveau 2" />
                            <MenuItem onAction="#handleNiveau3" text="Niveau 3" />
                            <MenuItem onAction="#handleNiveau4" text="Niveau 4" />
                        </items>
                    </MenuButton>
                    <MenuButton fx:id="languagesMenuButton" text="Langues">
                        <items>
                            <MenuItem onAction="#handlePython" text="Python" />
                            <MenuItem onAction="#handleJava" text="Java" />
                            <MenuItem onAction="#handleSQL" text="SQL" />
                        </items>
                    </MenuButton>
                    <TextField fx:id="searchField" promptText="Recherche..." style="-fx-background-color: white; -fx-text-fill: black; -fx-prompt-text-fill: gray;" />
                    <Button onAction="#handleSearch" text="Rechercher" />
                </HBox>
            </top>
            <center>
                <VBox fx:id="formationsVBox" spacing="20.0" padding="10.0">
                    <!-- Les formations seront ajoutÃ©es dynamiquement ici -->
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
