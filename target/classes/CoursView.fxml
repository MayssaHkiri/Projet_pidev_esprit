<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CoursViewController">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
        <Label text="Gestion des Cours" style="-fx-font-size: 18px;"/>

        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="titreColumn" text="Titre"/>
                <TableColumn fx:id="descriptionColumn" text="Description"/>
                <TableColumn fx:id="enseignantIdColumn" text="Enseignant ID"/>
                <TableColumn fx:id="chapitreIdColumn" text="Chapitre ID"/>
            </columns>
        </TableView>

        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Titre:"/>
            <TextField fx:id="titreField" GridPane.columnIndex="1"/>
            <Label text="Description:" GridPane.rowIndex="1"/>
            <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Enseignant ID:" GridPane.rowIndex="2"/>
            <TextField fx:id="enseignantIdField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Chapitre ID:" GridPane.rowIndex="3"/>
            <TextField fx:id="chapitreIdField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Button text="Choose PDF" onAction="#handleChooseFile" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Ajouter" onAction="#handleAdd"/>
            <Button text="Modifier" onAction="#handleUpdate"/>
            <Button text="Supprimer" onAction="#handleDelete"/>
        </HBox>
    </VBox>
</AnchorPane>
