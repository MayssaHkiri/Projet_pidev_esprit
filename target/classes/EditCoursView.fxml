<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.EditCoursController" prefHeight="408.0" prefWidth="600.0">
    <Label text="Modifier Cours" style="-fx-font-size: 18px; -fx-text-fill: #333333;" />

    <HBox spacing="10">
        <Label text="Titre:" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <TextField fx:id="titreField" />
    </HBox>
    <HBox spacing="10">
        <Label text="Description:" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <TextField fx:id="descriptionField" />
    </HBox>
    <HBox spacing="10">
        <Label text="PDF File:" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <Button text="Choisir" onAction="#handleChooseFile" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
    </HBox>

    <HBox spacing="10">
        <Button text="Enregistrer" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button text="Annuler" onAction="#handleCancel" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
    </HBox>
</VBox>
