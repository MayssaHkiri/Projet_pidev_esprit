<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/21" fx:controller="Controllers.EditMatiereController" prefHeight="408.0" prefWidth="600.0">
    <Label text="Modifier Matière" style="-fx-font-size: 18px; -fx-text-fill: #333333;" />

    <HBox spacing="10">
        <Label text="Nom:" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <TextField fx:id="nomField"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Coefficient:" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <TextField fx:id="coeffField"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Mode d'Évaluation:" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
        <TextField fx:id="modeEvalField"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Enregistrer" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button text="Annuler" onAction="#handleCancel" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
    </HBox>
</VBox>
