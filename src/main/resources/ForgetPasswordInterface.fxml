<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ForgetPasswordController" style="-fx-background-color: white; -fx-padding: 30;">
    <Text text="Enter your email:" style="-fx-font-size: 22px; -fx-fill: black;" />
    <TextField fx:id="emailField" style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 5px; -fx-font-size: 18px; -fx-padding: 10;" />
    <Button text="Send New Password" onAction="#handleResetPassword" style="-fx-background-color: red; -fx-text-fill: white; -fx-border-radius: 5px; -fx-font-size: 18px; -fx-padding: 10;" />
    <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: gray; -fx-text-fill: white; -fx-border-radius: 5px; -fx-font-size: 18px; -fx-padding: 10;" />
</VBox>
