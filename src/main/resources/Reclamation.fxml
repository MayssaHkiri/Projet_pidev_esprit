<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400" prefWidth="500" spacing="15" style="-fx-background-color: white; -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ReclaimPasswordController">
    <children>
        <Label text="Réclamation de Changement de Mot de Passe" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <Label text="Décrivez votre problème:" style="-fx-font-size: 20px; -fx-text-fill: #333333;" />
        <TextArea fx:id="taDescription" prefHeight="200" style="-fx-background-color: #eeeeee; -fx-text-fill: #333333;" />
        <Button fx:id="btnSubmit" text="Soumettre" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" onAction="#handleSubmit" />
    </children>
</VBox>
